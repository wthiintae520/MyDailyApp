<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <TextView
        android:id="@+id/TextViewCarBrandH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Car brand goes here"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TextViewCarTypeH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Car type goes here"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextViewCarBrandH" />

    <TextView
        android:id="@+id/TextViewDistanceH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Distance goes here"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/TextViewCarTypeH" />

</androidx.constraintlayout.widget.ConstraintLayout>